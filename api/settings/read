use strict;
use esmith::ConfigDB;
use JSON;


require '/usr/libexec/nethserver/api/lib/helper_functions.pl';

my $inputData = readInput();
my $ret = undef;

if ($inputData->{'action'} eq 'list'){
    $ret = readUsers();
    print encode_json($ret);
    exit (0);
} else {
    error();
}

sub readUsers
{
    my $adb = esmith::ConfigDB->open_ro('accounts');
    my @users = ();
    my $ret = {
        'ftp' => \@users,
    };

    foreach ($adb->get_all_by_prop('type' => 'ftp')) {
        push @users, +{
            $_->props(),
            'name' => $_->key,
        };
    }

    return $ret;
}